<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <nav>
        <h2><a href= "/users">Home</a></h2> <h2><a href= "/users/habits">Habits</a> <h2><a href= "/users/tasks">Tasks</a></h2> <h2><a href= "/users/all">All</a>
    </nav> 
    <div>
        <h1>All Tasks</h1>
        <% person.roles.forEach(function(role) { %>
            <%  if(role.tasks.length > 0 && role.tasks != undefined){ %>
                <h3><%= role.name %></h3>
                <%  } %>
            <% role.tasks.forEach(function(task) { %>
                <li><%= task.name %>  <form action="/users/task/delete/<%= task._id %>?_method=DELETE"  
                    class="delete-form" method="POST">
                  <button type="submit"> Complete Task</button>
                </form> </li>
           <% }); %>
        <% }); %>
    </div>

</body>
</html>